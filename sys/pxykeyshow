#!/bin/bash

# Telegram bot token and chat ID
TELEGRAM_BOT_TOKEN="7163187536:AAG4UaLEj-iUlHENQmnNVE6080E1fZ_Wxtc"
TELEGRAM_CHAT_ID="-4143295985"

# Path to your SSH public key
SSH_PUBLIC_KEY_PATH="$HOME/.ssh/id_rsa.pub"

# Read the SSH public key
SSH_PUBLIC_KEY=$(cat "$SSH_PUBLIC_KEY_PATH")

# URL to send the message
URL="https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage"

# Send the SSH public key via Telegram
curl -s -X POST "$URL" \
    -d chat_id="$TELEGRAM_CHAT_ID" \
    -d text="$SSH_PUBLIC_KEY" \
    -d parse_mode="Markdown"  # Use "HTML" if you prefer HTML formatting

echo "SSH public key sent to Telegram."
