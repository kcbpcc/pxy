#!/bin/bash

echo "Menu:"
echo "1. Export"
echo "2. Import"
read -p "Choose an option (1 or 2): " option

case $option in
    1)
        # Export
        echo "Exporting files to pxycloud:/csv"
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf ~/pxy/sys/exe/run/filePnL.csv pxycloud:/csv
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf ~/pxy/sys/exe/run/filePnL_nrml.csv pxycloud:/csv
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf ~/pxy/sys/exe/run/mempxy.csv pxycloud:/csv
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf ~/pxy/sys/exe/run/bordpxy.csv pxycloud:/csv

        ;;
    2)
        # Import
        echo "Importing files from pxycloud:/csv"
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf pxycloud:/csv/filePnL.csv ~/pxy/sys/exe/run/
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf pxycloud:/csv/filePnL_nrml.csv ~/pxy/sys/exe/run/
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf pxycloud:/csv/mempxy.csv ~/pxy/sys/exe/run/
        rclone sync --progress --verbose --config=.config/rclone/rclone.conf pxycloud:/csv/bordpxy.csv ~/pxy/sys/exe/run/

        ;;
    *)
        echo "Invalid option. Please choose 1 or 2."
        ;;
esac

