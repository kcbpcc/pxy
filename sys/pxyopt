#PXY®
#!/bin/bash

source ~/env/bin/activate

# Change to the script's directory
cd ~/pxy/sys/exe/run

# Function to display the menu
display_menu() {
    echo "Choose an option from the menu below:"
    echo "1. 📈 Execute straddleoptpxy.py (Strategy: Straddle)"
    echo "2. 🔄 Execute strangleoptpxy.py (Strategy: Strangle)"
    echo "3. 🎯 Execute tgtceselloptpxy.py (Strategy: Targeted Call Sell)"
    echo "4. 🛒 Execute tgtpebuyoptpxy.py (Strategy: Targeted Put Buy)"
    echo "5. ❌ Exit"
}

# Function to execute the selected Python script
execute_script() {
    case $1 in
        1) python3 straddleoptpxy.py ;;
        2) python3 strangleoptpxy.py ;;
        3) python3 tgtceselloptpxy.py ;;
        4) python3 tgtpebuyoptpxy.py ;;
        5) echo "Exiting..."; exit ;;
        *) echo "Invalid option";;
    esac
}

# Main function
main() {
    while true; do
        display_menu
        read -p "Enter your choice: " choice
        execute_script $choice
    done
}

# Run the main function
main
