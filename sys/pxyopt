#!/bin/bash

# Function to display menu
display_menu() {
    echo "Do you sell or buy?"
    echo "    b. ðŸŸ¢ Buy ðŸ‘†"
    echo "    s. ðŸ”´ Sell ðŸ‘‡"
    echo "    q. ðŸš« Exit ðŸš«"
}

# Function to execute selected Python script
execute_script() {
    case $1 in
        s) python3 soptpxy.py ;;
        b) python3 boptpxy.py ;;
        q) exit ;;
        *) echo "Invalid option. Please select again." ;;
    esac
}

# Main script
source ~/env/bin/activate
cd ~/pxy/sys/exe/run

while true; do
    display_menu
    read -p "Enter your choice: " choice
    execute_script $choice
done
