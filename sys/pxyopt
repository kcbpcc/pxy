#!/bin/bash

# Function to display menu
display_menu() {
    echo "Select an option:"
    echo "s. Sell Option Proxy"
    echo "b. Buy Option Proxy"
    echo "e. Exit"
}

# Function to execute selected Python script
execute_script() {
    case $1 in
        s) python3 soptpxy.py ;;
        b) python3 boptpxy.py ;;
        e) exit ;;
        *) echo "Invalid option. Please select again." ;;
    esac
}

# Main script
source ~/env/bin/activate
cd ~/pxy/sys/exe/run

while true; do
    display_menu
    read -p "Enter your choice: " choice
    execute_script $choice
done
