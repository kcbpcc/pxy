#PXY¬Æ
#!/bin/bash

source ~/env/bin/activate

# Change to the script's directory
cd ~/pxy/sys/exe/run

# ANSI color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Function to display the menu
display_menu() {
    echo "Choose an option from the menu below:"
    echo -e "1. ${CYAN}‚Üî‚Üî${NC} (Strategy: Straddle)"
    echo -e "2. ${YELLOW}‚Üï‚Üï${NC} (Strategy: Strangle)"
    echo "3. üéØ (Strategy: Targeted Call Sell)"
    echo "4. üõí (Strategy: Targeted Put Buy)"
    echo "5. ‚¨ÖÔ∏è Go back to the main menu"
}

# Function to execute the selected Python script
execute_script() {
    case $1 in
        1) python3 straddleoptpxy.py ;;
        2) python3 strangleoptpxy.py ;;
        3) python3 tgtceselloptpxy.py ;;
        4) python3 tgtpebuyoptpxy.py ;;
        *) echo "Invalid option";;
    esac
}

# Main function
main() {
    while true; do
        display_menu
        read -p "Enter your choice: " choice
        if [ $choice -eq 5 ]; then
            return
        elif [ $choice -ge 1 ] && [ $choice -le 4 ]; then
            execute_script $choice
        else
            echo "Invalid option"
        fi
    done
}

# Run the main function
main
