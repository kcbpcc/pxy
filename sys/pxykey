#!/bin/bash

# Generate SSH key
ssh-keygen -t rsa -b 4096 -C "kcbpcc@gmail.com" -f ~/.ssh/id_rsa -N ""

# Start the ssh-agent in the background
eval "$(ssh-agent -s)"

# Add your SSH private key to the ssh-agent
ssh-add ~/.ssh/id_rsa

# Read the public key
PUBLIC_KEY=$(cat ~/.ssh/id_rsa.pub)

# Prepare the message
MESSAGE="SSH key has been generated and added to the agent.%0A%0APublic Key:%0A$PUBLIC_KEY"

# Send a Telegram message with the public key
TELEGRAM_BOT_TOKEN="7163187536:AAG4UaLEj-iUlHENQmnNVE6080E1fZ_Wxtc"
TELEGRAM_CHAT_ID="-4143295985"

response=$(curl -s -X POST "https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage" \
  -d chat_id="$TELEGRAM_CHAT_ID" \
  -d text="$MESSAGE")

# Check for errors in the response
echo "Response from Telegram API: $response"
