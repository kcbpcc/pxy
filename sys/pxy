#!/bin/bash
# ANSI color codes
clear
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color
source ~/env/bin/activate
cd ~/pxy/sys/exe/run
pxylogin >/dev/null 2>&1
while true; do
    sudo timedatectl set-timezone UTC > /dev/null 2>&1
    # Copy pxy* files from ~/pxy/sys/ to /usr/local/bin/
    sudo cp ~/pxy/sys/pxy* /usr/local/bin/
    # Change the permissions of copied files to make them executable
    sudo chmod +x /usr/local/bin/pxy*

    # Display menu
    echo -e "${YELLOW}   PXY® PreciseXceleratedYield Pvt Ltd™   ${NC}"
    pxywrld
    echo "******************************************" 
    echo "   -pxy                   🔘        🔥"
    echo "   -pxypy                 🐍        py"
    echo "   -pxybuy                🌱        by"
    echo "   -pxycdsl               🔐        cd"
    echo "   -pxytest               💊        ts"
    echo "   -pxyvalue              📊        vl"
    echo "   -pxyflash              ⚡        fl"
    echo "   -pxycheck              🧪        ck"
    echo "   -pxyupdate             📥        up"
    echo "******************************************"
    echo -e "${YELLOW}   PXY® PreciseXceleratedYield Pvt Ltd™   ${NC}"

    # Get user input
    read -p "Enter your choice:⚙️⚙️⚙️👉👉 " choice
    pxylogin > /dev/null
    # Perform actions based on user input
    case $choice in
        ts)
            echo "        💊💊💊.Unit Test.💊💊💊"
            pxyztst
            ;;   
        cd)
            echo "        🔐🔐🔐.Check CDSL.🔐🔐🔐"
            pxycdsl
            ;;   
        vl)
            echo "        📊📊📊.Check ACV.📊📊📊"
            pxyacval
            ;;   
        by)
            echo "        🌱🌱🌱..Buy Now.🌱🌱🌱"
            pxybuy
            ;;    
        fl)
            echo "        ⚡⚡⚡..Flash it .⚡⚡⚡"
            pxyflash
            ;;   
        up)
            echo "       🧰⚙️🔧🛠️🔐 Update PXY®...🧰⚙️🔧🛠️🔐"
            pxyupdate
            ;;
        ck)
            echo "        🧪🧪🧪 Test All PXY®...🧪🧪🧪"
            pxycheck
            ;;
        py)
            echo "        ...................👉exe/run"
            pxypy
            ;;
        "")
            echo ".........Lets have fun with PXY®  🔥💫🚀🔥"
            pxypxy
            ;;
        en)
            echo ".........Lets have fun with PXY®  🔥💫🚀🔥"
            pxypxy
            ;;
        *)
            # Handle other cases if needed
            echo "Invalid choice: $choice"
            ;;
    esac
done


